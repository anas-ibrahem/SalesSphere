<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SalesSphere" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowIsTranslucent">true</item>

        <!-- border color of edit text & hint that goes on top & cursor color-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorPrimaryContainer">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="elevationOverlayColor">@android:color/transparent</item>

        <!-- Secondary branding color. (Progress bar color)-->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorSecondaryContainer">@color/bg</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/white</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/white</item>

        <!-- color on edit text-->
        <item name="colorOnSurface">@color/primary</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- Error color. -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/red</item>
    </style>

    <style name="Theme.SalesSphere" parent="Base.Theme.SalesSphere" />
</resources>